vz-dirs:
  conf:      /etc/vz/conf
  private:   /vz/private
  root:      /vz/root

build:
  templates:       /vzTemplates
  source:          <%= target_template %>
  hostname-prefix: sandbox
  hostname-suffix: .<%= sandbox_domain %>
  ipaddr-prefix:   <%= subnet_prefix %>
  standby-count:   <%= min_containers %>
  max-count:       <%= max_containers %>

server:
  bind-address: 0.0.0.0
